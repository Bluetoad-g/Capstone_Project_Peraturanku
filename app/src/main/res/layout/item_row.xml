<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="isPeraturan"
            type="com.dicoding.peraturanku_fixed.data_class.PeraturanData" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_margin="8dp"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/peraturanImg"
                    android:imageUrl="@{isPeraturan.img}"
                    android:scaleType="centerCrop"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginLeft="13dp">

                    <TextView
                        android:id="@+id/peraturanNama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:gravity="start"
                        android:text="@{isPeraturan.nama}"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold|normal" />

                    <TextView
                        android:id="@+id/peraturanKategori"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:gravity="start"
                        android:text="@{isPeraturan.kategori}"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="13sp"
                        android:textStyle="bold|normal" />

                    <TextView
                        android:id="@+id/peraturanDeskripsi"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="13sp"
                        android:gravity="start"
                        android:textStyle="bold|normal"
                        android:layout_gravity="center"
                        android:text="@{isPeraturan.deskripsi}"
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </LinearLayout>
            <View
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>